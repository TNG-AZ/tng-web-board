<EditForm Model="UserMember" OnValidSubmit=@(() => SaveUser()) class="col-lg-12 col-xl-6">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>Legal Name:</label>
        <input type="text" class="form-control" required="required" @bind="UserMember.LegalName" />
    </div>
    <div class="form-group">
        <label>Date of Birth:</label>
        <input type="date" class="form-control" required="required" @bind="UserMember.Birthday" />
    </div>
    <button type="submit">Submit</button>
</EditForm>
